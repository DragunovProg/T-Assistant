<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_subject"
        android:layout_width="148dp"
        android:layout_height="160dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@mipmap/ic_cgpa" />

    <TextView
        android:id="@+id/subjectText"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="ПРЕДМЕТЫ"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_subject"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_subject"
        app:layout_constraintTop_toBottomOf="@+id/btn_subject" />

    <ImageButton
        android:id="@+id/btn_schedule"
        android:layout_width="148dp"
        android:layout_height="160dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@mipmap/ic_schedule" />

    <TextView
        android:id="@+id/scheduleText"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="РАСПИСАНИЕ"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_schedule"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_schedule"
        app:layout_constraintTop_toBottomOf="@+id/btn_schedule" />
</androidx.constraintlayout.widget.ConstraintLayout>